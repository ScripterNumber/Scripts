toggleCorner.CornerRadius = UDim.new(0.5, 0)
toggleCorner.Parent = toggleBtn


local function updateServerInfo()
    local jobId = game.JobId
    local placeId = game.PlaceId
    
    infoBox.Text = string.format(
        " JobId = %s\n PlaceId = %s",
        jobId ~= "" and jobId or "Studio/Local",
        tostring(placeId)
    )
end

local function animateButton(button)
    local originalSize = button.Size
    button:TweenSize(
        UDim2.new(originalSize.X.Scale * 0.95, 0, originalSize.Y.Scale * 0.95, 0),
        Enum.EasingDirection.Out,
        Enum.EasingStyle.Quad,
        0.1,
        true,
        function()
            button:TweenSize(originalSize, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1)
        end
    )
end

local function showNotification(title, text, duration)
    StarterGui:SetCore("SendNotification", {
        Title = title,
        Text = text,
        Duration = duration or 3
    })
end

local function parseServerData(text)
    local jobId = text:match("JobId%s*=%s*([%w%-]+)")
    local placeId = text:match("PlaceId%s*=%s*(%d+)")
    
    return jobId, tonumber(placeId)
end


copyBtn.MouseButton1Click:Connect(function()
    animateButton(copyBtn)
    
    local jobId = game.JobId
    local placeId = game.PlaceId
    
    local data = string.format(
        "%s\n%s",
        jobId ~= "" and jobId or "Studio/Local",
        tostring(placeId)
    )
    
    setclipboard(data)
    showNotification("‚úÖ Copied!", "Server data copied to clipboard", 3)
end)

joinBtn.MouseButton1Click:Connect(function()
    animateButton(joinBtn)
    

    local jobIdText = jobIdInput.Text
    local placeIdText = placeIdInput.Text
    
    local jobId = jobIdText:match("([%w%-]+)") or jobIdText
    local placeId = tonumber(placeIdText:match("(%d+)") or placeIdText)
    
    if jobId == "" or not placeId then
        showNotification("‚ùå Error", "Invalid JobId or PlaceId", 3)
        return
    end
    

    local success, err = pcall(function()
        TeleportService:TeleportToPlaceInstance(placeId, jobId, player)
    end)
    
    if success then
        showNotification("üöÄ Teleporting...", "Joining server...", 5)
    else
        showNotification("‚ùå Error", "Failed to join: " .. tostring(err), 5)
    end
end)

closeBtn.MouseButton1Click:Connect(function()
    animateButton(closeBtn)
    mainFrame:TweenSize(
        UDim2.new(0, 0, 0, 0),
        Enum.EasingDirection.In,
        Enum.EasingStyle.Back,
        0.3,
        true,
        function()
            mainFrame.Visible = false
            mainFrame.Size = UDim2.new(0.25, 0, 0.35, 0)
        end
    )
end)

toggleBtn.MouseButton1Click:Connect(function()
    animateButton(toggleBtn)
    
    if not mainFrame.Visible then
        mainFrame.Visible = true
        mainFrame.Size = UDim2.new(0, 0, 0, 0)
        mainFrame:TweenSize(
            UDim2.new(0.25, 0, 0.35, 0),
            Enum.EasingDirection.Out,
            Enum.EasingStyle.Back,
            0.3
        )
        updateServerInfo()
    else
        closeBtn.MouseButton1Click:Fire()
    end
end)


jobIdInput.Focused:Connect(function()
    local clipboard = getclipboard and getclipboard() or ""
    local jobId, placeId = parseServerData(clipboard)
    
    if jobId and placeId then
        jobIdInput.Text = "JobId = " .. jobId
        placeIdInput.Text = "PlaceId = " .. tostring(placeId)
    end
end)


updateServerInfo()
mainFrame.Visible = false

showNotification("Server Hub", "Press üåê to open", 5)


spawn(function()
    while wait(5) do
        if mainFrame.Visible then
            updateServerInfo()
        end
    end
end)
