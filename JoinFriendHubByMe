toggleBtn.Position = UDim2.new(0.01, 0, 0.47, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(80, 120, 255)
toggleBtn.Text = "üåê"
toggleBtn.TextScaled = true
